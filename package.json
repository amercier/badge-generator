{
  "name": "badge-generator",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.0",
    "eslint-config-amercier": "^0.3.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "flow-bin": "^0.91.0",
    "flow-typed": "^2.5.1",
    "husky": "^1.3.0",
    "if-ci": "^3.0.0",
    "jest-extended": "^0.11.0",
    "jest-puppeteer": "^4.0.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "puppeteer": "^1.11.0",
    "react-scripts": "^2.1.1",
    "react-test-renderer": "^16.6.3"
  },
  "peerDependencies": {
    "jest": "^23.6.0"
  },
  "scripts": {
    "install": "if-not-ci flow-typed install --overwrite --skip",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --list-different '**/*'",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .js,.jsx --ignore-pattern flow-typed/ .",
    "lint:flow": "flow",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-integration": "jest -c integration/jest.config.js",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*": [
      "prettier --list-different"
    ],
    "*.{js,jsx}": [
      "eslint --ignore-pattern flow-typed/",
      "cross-env CI=run-once react-scripts test --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "amercier/create-react-app",
      "amercier/with/flowtype"
    ],
    "rules": {
      "jsdoc/require-example": "off"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.spec.{js,jsx}",
      "!src/index.jsx",
      "!src/serviceWorker.js",
      "!src/setupTests.js",
      "!src/testHelpers.js"
    ]
  }
}
